{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",          // Override for Node.js execution
      "moduleResolution": "node"
    }
  },
  "include": ["src/**/*"]
}
